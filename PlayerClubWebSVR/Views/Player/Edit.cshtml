@model PlayerClubWebSVR.Models.Player
@{
    ViewData["Title"] = "Edit";
}

<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfBirth" class="control-label"></label>
                <input asp-for="PlaceOfBirth" class="form-control" />
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label col-sm-3"></label>
                @Html.DropDownListFor(model=>model.TeamId, ViewBag.TeamIdList as SelectList,"--select--")
                <br /><span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="RugbyUnionId" class="control-label col-sm-3"></label>
                @Html.DropDownListFor(model=>model.RugbyUnionId, ViewBag.RugbyUnionList as SelectList,"--select--")
                <br /><span asp-validation-for="RugbyUnionId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
